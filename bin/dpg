#!/usr/bin/env python3

import argparse

def main():
    p = argparse.ArgumentParser()
    p.add_argument(
        '-g', '--generator',
        choices=['generic', 'google'], default='generic',
        help='To be done...'
    )

    p.add_argument(
        '-u', '--username',
        required=True,
        help='To be done...'
    )

    p.add_argument(
        '-s', '--service',
        required=True,
        help='To be done...'
    )

    p.add_argument(
        '-c', '--counter',
        type=int, default=0,
        help='To be done...'
    )

    args = p.parse_args()

if __name__ == '__main__':
    main()
